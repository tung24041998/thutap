                Login
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">

                <li><a href="#">CSS</a></li>
                <li><a href="#">JavaScript</a></li>
            </ul>
        </div>*@
    @RenderBody()
    <footer>
        <p>&copy; @DateTime.Now.Year</p>
    </footer>

</body>
</html>
