<!DOCTYPE html>
<html>
<head>
    <title>EShopV11</title>
    <!-- Latest compiled and minified CSS -->
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, minimum-scale=1.0">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/Trainee.js"></script>
    <!-- jQuery library -->
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="~/Scripts/fontawesome.min.js"></script>
    <link href="~/Content/fontawesome.min.css" rel="stylesheet" />
    <link href="~/Content/layout.css" rel="stylesheet" />
    <script>
        $(Document).ready(function () {
            $('#search').mouseover(function () {
                $('#divhelp').fadeIn(0);
            }).mouseout(function () {
                $('#divhelp').fadeOut(5);
            });
        });
    </script>
</head>
<style>
    a:hover {
        color: #819FF7;
    }
</style>
<body>

    <div class="topnav container">

        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        @if (ViewBag.Right == "Admin")
                        {
                            <li><a href="/Home/Index">Trang chủ</a></li>
                            <li><a href="/Home/AddTheme">Thêm Chủ Đề</a></li>
                            <li><a href="/Home/uploadImage">Thêm Ảnh</a></li>
                            <li><a href="/Users/User">User</a></li>
                            <li><a href="/Home/Theme">Theme</a></li>
                            <li><a href="/Home/Censor">Kiểm duyệt</a></li>

                        }
                        else
                        {
                            if (ViewBag.Right == "User")
                            {
                                <li><a href="/Home/Index">Trang chủ</a></li>
                                <li><a href="/Home/uploadImage">Thêm Ảnh</a></li>
                            }
                            else
                            {
                                <li><a href="/Home/Index">Trang chủ</a></li>
                            }
                        }
                    </ul>
                    <form class="navbar-form navbar-left" action="/Home/Index">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Search" name="q" value="@ViewBag.q">
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>

        <p style="padding-top: 25px; padding-left: 30px;"><i class="fa fa-camera-retro fa-3x"></i> Drive</p>
        <div class="search-container">
            @if (ViewBag.Username == null)
            {
                <a href="/Users/Index"><b>Đăng nhập </b></a>
                <a href="/Users/Create">Tạo tài khoản</a>
            }
            else
            {
                <a href="/Users/Logout" id="dx">Đăng xuất</a>
                <br />
                <font face="Comic sans MS" size="3" color="#58ACFA">@ViewBag.Username: (@ViewBag.Right)</font><br />
            }

            <form action="/Home/Index">
                <input type="text" placeholder="Search.." name="q" value="@ViewBag.q">
                <input type="hidden" name="cat" value="@ViewBag.cat" />
                <button type="submit" id="search"><i class="fa fa-search"></i><div id="divhelp" style="display:none;"><font face="Comic sans MS" size="1">Tìm kiếm</font></div></button>
            </form>
            <br />

        </div>
    </div>
    @*<div style="width:50%; margin: 0 auto;">
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                Login
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">

                <li><a href="#">CSS</a></li>
                <li><a href="#">JavaScript</a></li>
            </ul>
        </div>*@
    <div class="container">
        @RenderBody()
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year</p>
    </footer>

</body>
</html>
